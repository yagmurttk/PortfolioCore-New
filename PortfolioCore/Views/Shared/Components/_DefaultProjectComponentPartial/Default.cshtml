@model List<Portfolio>

<div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@item.CategoryId">
            <div class="card h-100" style="height: 600px;">
                <img src="@item.ImageUrl" class="card-img-top" alt="" style="height: 400px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">@item.Title</h4>
                    <p class="card-text flex-grow-1">@item.Description</p>
                    <div class="mt-auto">
                        <a href="@item.ImageUrl" title="App 1" data-gallery="portfolio-gallery-app" class="glightbox preview-link me-2">
                            <i class="bi bi-zoom-in"></i>
                        </a>
                        <a href="@item.ProjectUrl" title="More Details" class="details-link">
                            <i class="bi bi-link-45deg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- End Portfolio Item -->
</div>