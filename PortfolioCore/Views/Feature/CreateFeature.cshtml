@model Feature
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Öne Çıkan Ekleme Sayfası</h3>
<br />

<form method="post">
    <label>İsim Soyisim</label>
    <input type="text" asp-for="FeatureNameSurname" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>1. Başlık</label>
    <input type="text" asp-for="FeatureTitle1" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>2. Başlık</label>
    <input type="text" asp-for="FeatureTitle2" class="form-control" style="border:1px solid grey" />
    <br />

    <label>3. Başlık</label>
    <input type="text" asp-for="FeatureTitle3" class="form-control" style="border:1px solid grey" />
    <br />

    <label>Resim Url</label>
    <input type="text" asp-for="FeatureImageURL" class="form-control" style="border:1px solid grey" />
    <br />

    <button class="btn btn-outline-primary col-md-12">Kaydet</button>
</form>