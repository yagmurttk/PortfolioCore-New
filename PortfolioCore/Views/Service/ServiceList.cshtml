@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hizmet Listesi</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Türü</th>
        <th>Ikon</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.ServiceTitle</td>
            <td>@item.ServiceIcon</td>
            <td>@item.ServiceDescription</td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class=" btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class=" btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateService/" class="btn btn-outline-primary col-md-12">Yeni Hizmet Girişi</a>

