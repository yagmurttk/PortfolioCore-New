@model Testimonial
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Referans Ekleme Sayfası</h3>
<br />
<form method="post">
    <label>Adı Soyadı</label>
    <input type="text" asp-for="NameSurname" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid grey;" />
    <br />
    <label>Yorumlar</label>
    <input type="text" asp-for="CommentDetail" class="form-control" style="border:1px solid grey" />
    <br />
    <label>Yorum Puanı</label>
    <input type="text" asp-for="StarPoint" class="form-control" style="border:1px solid grey" />
    <br />
    <label>Görsel</label>
    <input type="text" asp-for="ImageUrl" class="form-control" style="border:1px solid grey" />
    <br />
    <button class="btn btn-outline-primary col-md-12">Kaydet</button>
</form>