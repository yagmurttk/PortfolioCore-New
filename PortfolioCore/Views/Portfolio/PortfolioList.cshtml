    @model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Proje Listesi</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Kategori</th>
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PortfolioId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Category.CategoryName</td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Sil</a></td>

            <td>
        </tr>
    }
</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-outline-primary col-md-12">Yeni Proje Ekle</a>

