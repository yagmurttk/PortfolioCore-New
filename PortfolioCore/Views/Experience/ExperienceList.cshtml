@model List<PortfolioCore.Entities.Experience>

@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Deneyim Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.ExperienceDate</td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class=" btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class=" btn btn-outline-danger">Sil</a></td>


        </tr>
    }
</table>
<a href="/Experience/CreateExperience/" class="btn btn-outline-primary col-md-12">Yeni Deneyim Girişi</a>

