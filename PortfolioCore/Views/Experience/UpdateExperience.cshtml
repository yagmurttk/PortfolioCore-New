@model PortfolioCore.Entities.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Deneyim Güncelleme Sayfası</h1>
<br />
<form method="post">

    <input type="hidden" asp-for="ExperienceId" />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" style="border:1px solid black;" />
    <br />

    <label>Alt Başlık</label>
    <input type="text" asp-for="SubTitle" class="form-control" style="border:1px solid black;" />
    <br />

    <label>Tarih</label>
    <input type="date" asp-for="ExperienceDate" class="form-control" style="border:1px solid black" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" style="border:1px solid black" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>