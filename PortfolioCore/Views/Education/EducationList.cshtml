@model List<Education>
@{
    ViewData["Title"] = "EducationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Eğitim Hayatım</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.DateInfo</td>
            <td>@item.Description</td>

            <td><a href="/Education/UpdateEducation/@item.EducationId" class=" btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Education/DeleteEducation/@item.EducationId" class=" btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-outline-primary col-md-12">Yeni Eğitim Girişi</a>
