@model List<Contact>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>İletişim Listesi</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Telefon Numarası</th>
        <th>Mail Adresi</th>
        <th>Konum</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td>@item.Location</td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class=" btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class=" btn btn-outline-danger">Sil</a></td>


        </tr>
    }
</table>
<a href="/Contact/CreateContact/" class="btn btn-outline-primary col-md-12">Yeni İletişim Girişi</a>

