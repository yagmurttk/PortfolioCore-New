@model Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yetenek Güncelleme Sayfası</h1>

<form method="post">

    <input type="hidden" asp-for="SkillId" />

    <label>Yetenek Başlığı</label>
    <input type="text" asp-for="SkillName" class="form-control" style="border:1px solid black;" />
    <br />

    <label>Yetenek Oranı</label>
    <input type="number" asp-for="SkillValue" class="form-control" style="border:1px solid black;" />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>