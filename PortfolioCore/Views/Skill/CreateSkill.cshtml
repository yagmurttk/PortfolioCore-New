@model Skill

@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Yetenek Ekleme Sayfası</h3>

<form method="post">
    <label>Yetenek Başlığı</label>
    <input type="text" asp-for="SkillName" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Yetenek Oranı</label>
    <input type="number" asp-for="SkillValue" class="form-control" style="border:1px solid grey;" />
    <br />
    <button class="btn btn-outline-primary col-md-12">Kaydet</button>
</form>