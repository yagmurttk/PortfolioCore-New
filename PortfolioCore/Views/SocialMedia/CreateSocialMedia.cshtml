@model SocialMedia
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Sosyal Medya Ekleme Sayfası</h3>
<br />

<form method="post">
    <label>Başlık</label>
    <input type="text" asp-for="SocialMediaName" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Url</label>
    <input type="text" asp-for="SocialMediaUrl" class="form-control" style="border:1px solid grey;" />
    <br />

    <label>Icon</label>
    <input type="text" asp-for="SocialMediaIcon" class="form-control" style="border:1px solid grey" />
    <br />
    <button class="btn btn-outline-primary col-md-12">Kaydet</button>
</form>